using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Salario
{
    class Program
    {
        static void Main(string[] args)
        {

            int Escolha;
            double salario, salariofinal;
            Console.WriteLine("Informe seu salario:");
            salario = double.Parse(Console.ReadLine());
            Console.WriteLine("Opção 1 - Aumento de 9%");
            Console.WriteLine("Opção 2 - Aumento de 15%");
            Console.WriteLine("Opção 3 - Aumento de 20%");
            Escolha = int.Parse(Console.ReadLine());
            
            switch (Escolha){
            
                case 1:
                    salariofinal = salario * 9 / 100 + salario;
                    Console.WriteLine("O seu salário de " + salario + " agora é de " + salariofinal);
                    break;
                case 2:
                    salariofinal = salario * 15 / 100 + salario;
                    Console.WriteLine("O seu salário de " + salario + " agora é de " + salariofinal);
                    break;
                case 3:
                    salariofinal = salario / 100 * 20 + salario;
                    Console.WriteLine("O seu salário de " + salario + " agora é de " + salariofinal);
                    break;
                default:
                    Console.WriteLine("Opção invalida");
                    break;
            }
            Console.ReadLine();













        }
    }
}
